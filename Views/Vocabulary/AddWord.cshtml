@model MvcDiary.Models.Word;

@{
    ViewData["Title"] = "AddWord";
}

<div class="col-sm-4 col-md-4">
    <h1 style="color:forestgreen">AddWord</h1>
    <hr />
    <form asp-action="AddWord">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="OriginId" class="form-control" value="@Model.OriginId" />
        </div>
        <div class="form-group">
            <label asp-for="Meaning" class="control-label"></label>
            <textarea asp-for="Meaning" cols="40" rows="4" style="overflow:hidden" class="form-control"></textarea>
            <span asp-validation-for="Meaning" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="AddWord" class="btn btn-primary" />
        </div>
    </form>
</div>