@model MvcDiary.Models.DiaryDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Diary</h4>
    <hr />
    <img class="figure-img" src="@Model.Diary.ImageUrl" height="300" alt="" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diary.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diary.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diary.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diary.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diary.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diary.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diary.IsPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diary.IsPublic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diary.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diary.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diary.Message)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diary.Message)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Diary.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h1>Comment</h1>

<h4>Feedback</h4>
<hr />
<div>
    @foreach (var feedback in Model.Feedbacks)
    {
        <a class="list-group-item-secondary">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="list-group-item-primary">@feedback.UserName</h5>
                <small class="pull-right">@feedback.CreateDateUTC</small>
            </div>
            <p class="lsit-group-item-text">@feedback.Message</p>
        </a>
    }
</div>
<div>
    <a asp-action="Comment" asp-route-id="@Model.Diary.Id">Commnet</a>
</div>